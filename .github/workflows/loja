  <!-- JavaScript: Cron√¥metro + Contador de compradores ao vivo -->
  <script>
    // 1. Cron√¥metro de fim de oferta (24 horas a partir da carga da p√°gina)
    function startCountdown() {
      let timeLeft = 24 * 60 * 60; // 24 horas em segundos

      const countdownEl = document.getElementById('countdown');

      const timer = setInterval(() => {
        timeLeft--;

        if (timeLeft <= 0) {
          clearInterval(timer);
          countdownEl.textContent = "00:00:00";
          countdownEl.style.color = "#ff0000";
          return;
        }

        const hours = Math.floor(timeLeft / 3600);
        const minutes = Math.floor((timeLeft % 3600) / 60);
        const seconds = timeLeft % 60;

        countdownEl.textContent = `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
      }, 1000);
    }

    // 2. Contador de pessoas comprando agora (simulado, sobe aleatoriamente)
    let buyers = 87; // Valor inicial realista
    const buyingEl = document.getElementById('buyingCount');

    function updateBuyers() {
      const increment = Math.floor(Math.random() * 4) + 1; // +1 a +4 por atualiza√ß√£o
      buyers += increment;
      buyingEl.textContent = buyers.toLocaleString('pt-BR');

      // Pisca levemente o n√∫mero ao atualizar
      buyingEl.style.animation = 'none';
      setTimeout(() => {
        buyingEl.style.animation = 'numberPulse 0.8s';
      }, 10);
    }

    // Inicia tudo
    startCountdown();
    setInterval(updateBuyers, Math.random() * 6000 + 4000); // Atualiza a cada 4-10 segundos
    updateBuyers(); // Primeira atualiza√ß√£o imediata
  </script>

